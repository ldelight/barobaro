<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 아래 스타일을 추가해 준다 -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/baro_logo</item>-->
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <!-- [START] XecureSmart -->
    <style name="TextTopDesc">
        <item name="android:paddingTop">6dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_gradient_grey</item>
    </style>

    <style name="TextTopSubject">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#333333</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextMain">
        <item name="android:textColor">#515151</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextSub">
        <item name="android:textColor">#999999</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="List" parent="@android:style/Widget.ListView">
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:divider">#999999</item>
        <item name="android:background">@drawable/shape_round_stroke</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="LayoutListRow">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="ImageIcon">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">10dip</item>
    </style>

    <style name="ResourceUpdateDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="XSInputTitle">
        <item name="android:textColor">#FF000000</item>
        <item name="android:gravity">left</item>
    </style>
    <!-- [END] XecureSmart -->
</resources>
